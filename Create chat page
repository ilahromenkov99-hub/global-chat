<body>
    <h1>üåç –ì–ª–æ–±–∞–ª—å–Ω—ã–π –ß–∞—Ç</h1>
    <p>–û—Ç–∫—Ä–æ–π—Ç–µ —ç—Ç—É —Å—Ç—Ä–∞–Ω–∏—Ü—É –Ω–∞ –Ω–µ—Å–∫–æ–ª—å–∫–∏—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞—Ö!</p>
    
    <div class="chat-container">
        <div id="chat"></div>
        
        <div style="display: flex; align-items: center;">
            <input type="text" id="message" placeholder="–í–≤–µ–¥–∏—Ç–µ –≤–∞—à–µ —Å–æ–æ–±—â–µ–Ω–∏–µ...">
            <button onclick="sendMessage()">üì§ –û—Ç–ø—Ä–∞–≤–∏—Ç—å</button>
        </div>
    </div>

    <script>
        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π –∏–∑ localStorage
        function loadMessages() {
            const saved = localStorage.getItem('globalChat');
            if (saved) {
                document.getElementById('chat').innerHTML = saved;
                document.getElementById('chat').scrollTop = document.getElementById('chat').scrollHeight;
            }
        }
        
        // –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
        function sendMessage() {
            const input = document.getElementById('message');
            const chat = document.getElementById('chat');
            const message = input.value.trim();
            
            if (message) {
                const timestamp = new Date().toLocaleTimeString();
                const messageHTML = `<div class="message my-message">
                    <strong>–í—ã (${timestamp}):</strong><br>${message}
                </div>`;
                
                chat.innerHTML += messageHTML;
                localStorage.setItem('globalChat', chat.innerHTML);
                
                input.value = '';
                chat.scrollTop = chat.scrollHeight;
                
                // –ò–º–∏—Ç–∞—Ü–∏—è –æ—Ç–≤–µ—Ç–∞ –¥—Ä—É–≥–∞
                setTimeout(() => {
                    const replies = [
                        '–ü—Ä–∏–≤–µ—Ç! –ö–∞–∫ –¥–µ–ª–∞?',
                        '–ò–Ω—Ç–µ—Ä–µ—Å–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ!',
                        '–Ø —Ç–æ–∂–µ –∑–¥–µ—Å—å!',
                        '–û—Ç–ª–∏—á–Ω—ã–π —á–∞—Ç!',
                        '–ü—Ä–æ–¥–æ–ª–∂–∞–µ–º –æ–±—â–µ–Ω–∏–µ!'
                    ];
                    const randomReply = replies[Math.floor(Math.random() * replies.length)];
                    
                    const replyHTML = `<div class="message">
                        <strong>–î—Ä—É–≥ (${new Date().toLocaleTimeString()}):</strong><br>${randomReply}
                    </div>`;
                    
                    chat.innerHTML += replyHTML;
                    localStorage.setItem('globalChat', chat.innerHTML);
                    chat.scrollTop = chat.scrollHeight;
                }, 2000);
            }
        }
        
        // –û—Ç–ø—Ä–∞–≤–∫–∞ –ø–æ Enter
        document.getElementById('message').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        // –ê–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π
        loadMessages();
        
        // –ê–≤—Ç–æ–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ –º–µ–∂–¥—É –≤–∫–ª–∞–¥–∫–∞–º–∏
        window.addEventListener('storage', function(e) {
            if (e.key === 'globalChat') {
                document.getElementById('chat').innerHTML = e.newValue;
                document.getElementById('chat').scrollTop = document.getElementById('chat').scrollHeight;
            }
        });
    </script>
